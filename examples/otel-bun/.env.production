# =============================================================================
# Production Configuration (Bun)
# =============================================================================
# Optimized for production with reduced sampling and through OTel Collector.

OTEL_SERVICE_NAME=otel-bun-example
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=production

# Send through OTel Collector for better routing and processing
OTEL_EXPORTER=otlp
OTEL_TRACES_ENDPOINT=http://otel-collector:4318/v1/traces
OTEL_METRICS_ENDPOINT=http://otel-collector:4318/v1/metrics
OTEL_LOGS_ENDPOINT=http://otel-collector:4318/v1/logs
OTEL_USE_HTTP=true

# Standard instrumentation (skip guards for performance)
OTEL_AUTO_INSTRUMENT_HTTP=true
OTEL_AUTO_INSTRUMENT_HANDLERS=true
OTEL_AUTO_INSTRUMENT_GUARDS=false
OTEL_INCLUDE_NAVIOS_ATTRIBUTES=false

# Enable metrics and logs
OTEL_METRICS_ENABLED=true
OTEL_LOGS_ENABLED=true

# Reduce sampling in production (10% of traces)
OTEL_SAMPLING_RATIO=0.1

# Ignore common utility routes
OTEL_IGNORE_ROUTES=/health,/metrics,/ready,/live

PORT=3000
HOST=0.0.0.0
