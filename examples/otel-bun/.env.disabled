# =============================================================================
# Disabled Configuration (Bun)
# =============================================================================
# Telemetry completely disabled - for testing without any overhead.
# Use: cp .env.disabled .env && bun run start

OTEL_SERVICE_NAME=otel-bun-example
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=test

# Disable all exports
OTEL_EXPORTER=none

# Disable instrumentation
OTEL_AUTO_INSTRUMENT_HTTP=false
OTEL_AUTO_INSTRUMENT_HANDLERS=false
OTEL_AUTO_INSTRUMENT_GUARDS=false

# Disable metrics and logs
OTEL_METRICS_ENABLED=false
OTEL_LOGS_ENABLED=false

PORT=3000
HOST=localhost
