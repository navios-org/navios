# =============================================================================
# OpenTelemetry Configuration - Example Environment File (Bun)
# =============================================================================
# Copy this file to .env and modify as needed.
# All OTEL_* variables are optional - defaults are provided.

# -----------------------------------------------------------------------------
# Service Identification
# -----------------------------------------------------------------------------
# Service name (appears in traces, metrics, and logs)
OTEL_SERVICE_NAME=otel-bun-example

# Service version
OTEL_SERVICE_VERSION=1.0.0

# Deployment environment: development, staging, production
OTEL_ENVIRONMENT=development

# -----------------------------------------------------------------------------
# Exporter Configuration
# -----------------------------------------------------------------------------
# Exporter type: otlp | console | none
# - otlp: Send telemetry to an OTLP-compatible backend (Jaeger, Tempo, etc.)
# - console: Print telemetry to console (useful for debugging)
# - none: Disable telemetry export
OTEL_EXPORTER=otlp

# OTLP endpoint for traces (when using OTLP exporter)
# For Jaeger direct: http://localhost:4318/v1/traces
# For OTel Collector: http://localhost:4328/v1/traces
OTEL_TRACES_ENDPOINT=http://localhost:4318/v1/traces

# OTLP endpoint for metrics
OTEL_METRICS_ENDPOINT=http://localhost:4318/v1/metrics

# OTLP endpoint for logs
OTEL_LOGS_ENDPOINT=http://localhost:4318/v1/logs

# Use HTTP protocol instead of gRPC (default: true)
OTEL_USE_HTTP=true

# Optional headers for OTLP requests (JSON format)
# OTEL_HEADERS={"Authorization": "Bearer token123"}

# -----------------------------------------------------------------------------
# Auto-Instrumentation
# -----------------------------------------------------------------------------
# Instrument HTTP requests (default: true)
OTEL_AUTO_INSTRUMENT_HTTP=true

# Instrument controller handlers (default: true)
OTEL_AUTO_INSTRUMENT_HANDLERS=true

# Instrument guards (default: false)
OTEL_AUTO_INSTRUMENT_GUARDS=false

# Include Navios-specific span attributes (default: false)
OTEL_INCLUDE_NAVIOS_ATTRIBUTES=true

# -----------------------------------------------------------------------------
# Metrics Configuration
# -----------------------------------------------------------------------------
# Enable metrics collection (default: false)
OTEL_METRICS_ENABLED=true

# Track request duration histogram (default: true when metrics enabled)
OTEL_METRICS_REQUEST_DURATION=true

# Track error count (default: true when metrics enabled)
OTEL_METRICS_ERROR_COUNT=true

# -----------------------------------------------------------------------------
# Logs Configuration
# -----------------------------------------------------------------------------
# Enable logs export (default: false)
OTEL_LOGS_ENABLED=true

# Log level: debug, info, warn, error
OTEL_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Sampling Configuration
# -----------------------------------------------------------------------------
# Sampling ratio from 0.0 to 1.0
# 1.0 = sample all traces, 0.5 = sample 50%, 0.0 = sample none
OTEL_SAMPLING_RATIO=1.0

# -----------------------------------------------------------------------------
# Routes to Ignore
# -----------------------------------------------------------------------------
# Comma-separated list of routes to ignore (supports glob patterns)
OTEL_IGNORE_ROUTES=/health,/metrics,/docs/*

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
PORT=3000
HOST=localhost
