# =============================================================================
# Console Output Configuration
# =============================================================================
# Outputs all telemetry to console - useful for debugging without Docker.
# Use: cp .env.console .env && yarn start

OTEL_SERVICE_NAME=otel-fastify-example
OTEL_SERVICE_VERSION=1.0.0
OTEL_ENVIRONMENT=local

# Print to console instead of sending to backend
OTEL_EXPORTER=console

# Enable all instrumentation for visibility
OTEL_AUTO_INSTRUMENT_HTTP=true
OTEL_AUTO_INSTRUMENT_HANDLERS=true
OTEL_AUTO_INSTRUMENT_GUARDS=true
OTEL_INCLUDE_NAVIOS_ATTRIBUTES=true

# Metrics shown in console
OTEL_METRICS_ENABLED=true
OTEL_LOGS_ENABLED=true

# Sample everything
OTEL_SAMPLING_RATIO=1.0

PORT=3000
HOST=localhost
