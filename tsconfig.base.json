{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declarationMap": true,
    "composite": true,
    "emitDeclarationOnly": true,
    "moduleResolution": "node16",
    "moduleDetection": "force",
    "target": "ES2022",
    "module": "Node16",
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true
  }
}
