{
  "name": "@navios/otel",
  "version": "1.0.0-alpha.3",
  "description": "OpenTelemetry integration for Navios framework",
  "license": "MIT",
  "author": {
    "name": "Oleksandr Hanzha",
    "email": "alex@granted.name"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Arilas/navios.git",
    "directory": "packages/otel"
  },
  "main": "./lib/index.cjs",
  "module": "./lib/index.mjs",
  "typings": "./lib/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.mts",
        "default": "./lib/index.mjs"
      },
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      }
    },
    "./legacy-compat": {
      "import": {
        "types": "./lib/legacy-compat/index.d.mts",
        "default": "./lib/legacy-compat/index.mjs"
      },
      "require": {
        "types": "./lib/legacy-compat/index.d.cts",
        "default": "./lib/legacy-compat/index.cjs"
      }
    }
  },
  "scripts": {
    "check": "tsc -b",
    "lint": "yarn run -T oxlint --fix && yarn run -T oxfmt",
    "test:ci": "vitest run",
    "build": "tsdown",
    "publish": "yarn npm publish --access public",
    "publish:next": "yarn npm publish --access public --tag next"
  },
  "devDependencies": {
    "@navios/core": "workspace:^",
    "@navios/di": "workspace:^",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.210.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.210.0",
    "@opentelemetry/resources": "^2.4.0",
    "@opentelemetry/sdk-metrics": "^2.5.0",
    "@opentelemetry/sdk-trace-node": "^2.4.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@navios/core": "workspace:^",
    "@navios/di": "workspace:^",
    "@opentelemetry/api": "^1.9.0"
  }
}
