{
  "name": "@navios/builder",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/builder/src",
  "prefix": "builder",
  "tags": [],
  "projectType": "library",
  "targets": {
    "check": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "inputs": ["^projectSources", "projectSources"],
      "options": {
        "command": ["tsc -b"],
        "cwd": "packages/builder"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "inputs": ["^projectSources", "project"],
      "options": {
        "command": "oxlint --fix",
        "cwd": "packages/builder"
      }
    },
    "test:ci": {
      "executor": "nx:run-commands",
      "inputs": ["^projectSources", "project"],
      "options": {
        "command": "vitest run",
        "cwd": "packages/builder"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "inputs": ["projectSources", "{projectRoot}/tsdown.config.mts"],
      "outputs": ["{projectRoot}/lib"],
      "dependsOn": ["check", "test:ci", "lint"],
      "options": {
        "command": "tsdown",
        "cwd": "packages/builder"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "yarn npm publish --access public",
        "cwd": "packages/builder"
      }
    },
    "publish:next": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "yarn npm publish --access public --tag next",
        "cwd": "packages/builder"
      }
    }
  }
}
