    "build": "tsdown",
    "publish": "yarn npm publish --access public",
    "publish:next": "yarn npm publish --access public --tag next"
  },
  "devDependencies": {
    "@navios/core": "workspace:^",
    "@navios/di": "workspace:^",
    "@navios/queues": "workspace:^",
    "typescript": "^5.9.3",
    "zod": "^4.3.5"
  },
  "peerDependencies": {
    "@navios/core": "workspace:^",
    "@navios/di": "workspace:^",
    "@navios/queues": "workspace:^",
    "zod": "^3.25.0 || ^4.0.0"
  }
