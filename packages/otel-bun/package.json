{
  "name": "@navios/otel-bun",
  "version": "1.0.0-alpha.3",
  "description": "OpenTelemetry integration for Navios Bun adapter",
  "license": "MIT",
  "author": {
    "name": "Oleksandr Hanzha",
    "email": "alex@granted.name"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Arilas/navios.git",
    "directory": "packages/otel-bun"
  },
  "main": "./lib/index.cjs",
  "module": "./lib/index.mjs",
  "typings": "./lib/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/index.d.mts",
        "default": "./lib/index.mjs"
      },
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      }
    }
  },
  "scripts": {
    "check": "tsc -b",
    "lint": "yarn run -T oxlint --fix && yarn run -T oxfmt",
    "test:ci": "bun run",
    "build": "tsdown",
    "publish": "yarn npm publish --access public",
    "publish:next": "yarn npm publish --access public --tag next"
  },
  "devDependencies": {
    "@navios/adapter-bun": "workspace:^",
    "@navios/core": "workspace:^",
    "@navios/di": "workspace:^",
    "@navios/otel": "workspace:^",
    "@opentelemetry/api": "^1.9.0",
    "@types/bun": "^1.3.6",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@navios/adapter-bun": "workspace:^",
    "@navios/core": "workspace:^",
    "@navios/di": "workspace:^",
    "@navios/otel": "workspace:^",
    "@opentelemetry/api": "^1.9.0"
  }
}
