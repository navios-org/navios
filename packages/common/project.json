{
  "name": "@navios/common",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/common/src",
  "prefix": "common",
  "tags": [],
  "projectType": "library",
  "targets": {
    "check": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^build"],
      "options": {
        "command": ["tsc -b"],
        "cwd": "packages/common"
      }
    },
    "test:ci": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run",
        "cwd": "packages/common"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/lib"],
      "dependsOn": ["check", "test:ci"],
      "options": {
        "command": "tsdown",
        "cwd": "packages/common"
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "yarn npm publish --access public",
        "cwd": "packages/common"
      }
    },
    "publish:next": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "yarn npm publish --access public --tag next",
        "cwd": "packages/common"
      }
    }
  }
}
