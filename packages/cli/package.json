{
  "name": "@navios/cli",
  "version": "0.2.3",
  "description": "CLI tools for Navios projects",
  "author": {
    "name": "Oleksandr Hanzha",
    "email": "alex@granted.name"
  },
  "bin": {
    "navios": "lib/bin.mjs"
  },
  "files": [
    "lib",
    "schema.json"
  ],
  "type": "module",
  "main": "./lib/index.mjs",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "check": "tsc -b",
    "lint": "yarn run -T oxlint --fix && yarn run -T oxfmt",
    "build": "tsdown",
    "publish": "yarn npm publish --access public",
    "publish:next": "yarn npm publish --access public --tag next"
  },
  "dependencies": {
    "clipanion": "^4.0.0-rc.4",
    "package-manager-detector": "^1.6.0",
    "vite": "^7.3.1",
    "vite-plugin-node": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "tsx": "^4.21.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
