{
  "name": "@navios/core",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/core/src",
  "prefix": "core",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx-tsup:build",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "main": {
          "index": "./src/index.mts"
        },
        "outputPath": "{workspaceRoot}/dist/{projectRoot}",
        "format": ["esm", "cjs"],
        "typings": true,
        "external": ["navios", "@navios/navios-zod"],
        "sourceMap": true,
        "clean": true,
        "assets": [
          "packages/core/*.md",
          "packages/core/LICENSE",
          {
            "input": "./packages/core/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/core/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          }
        ],
        "tsConfig": "{projectRoot}/tsconfig.json"
      }
    },
    "publish": {
      "executor": "nx-yarn-publish:publish",
      "options": {
        "outputPath": "{workspaceRoot}/dist/{projectRoot}",
        "access": "public"
      }
    }
  }
}
