{
  "name": "@navios/di",
  "version": "1.0.0",
  "scripts": {
    "check": "tsc -b",
    "lint": "oxlint --fix",
    "test:ci": "vitest run",
    "test:gc": "NODE_OPTIONS=--expose-gc vitest run src/__tests__/gc",
    "build": "tsdown",
    "publish": "yarn npm publish --access public",
    "publish:next": "yarn npm publish --access public --tag next"
  },
  "author": {
    "name": "Oleksandr Hanzha",
    "email": "alex@granted.name"
  },
  "repository": {
    "directory": "packages/di",
    "type": "git",
    "url": "https://github.com/Arilas/navios.git"
  },
  "license": "MIT",
  "sideEffects": false,
  "peerDependencies": {
    "zod": "^3.25.0 || ^4.0.0"
  },
  "typings": "./lib/index.d.mts",
  "main": "./lib/index.cjs",
  "module": "./lib/index.mjs",
  "exports": {
    ".": {
      "browser": {
        "types": "./lib/browser/index.d.mts",
        "default": "./lib/browser/index.mjs"
      },
      "bun": {
        "types": "./lib/index.d.mts",
        "default": "./lib/index.mjs"
      },
      "deno": {
        "types": "./lib/index.d.mts",
        "default": "./lib/index.mjs"
      },
      "node": {
        "import": {
          "types": "./lib/index.d.mts",
          "default": "./lib/index.mjs"
        },
        "require": {
          "types": "./lib/index.d.cts",
          "default": "./lib/index.cjs"
        }
      },
      "import": {
        "types": "./lib/index.d.mts",
        "default": "./lib/index.mjs"
      },
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      }
    },
    "./testing": {
      "import": {
        "types": "./lib/testing/index.d.mts",
        "default": "./lib/testing/index.mjs"
      },
      "require": {
        "types": "./lib/testing/index.d.cts",
        "default": "./lib/testing/index.cjs"
      }
    },
    "./legacy-compat": {
      "import": {
        "types": "./lib/legacy-compat/index.d.mts",
        "default": "./lib/legacy-compat/index.mjs"
      },
      "require": {
        "types": "./lib/legacy-compat/index.d.cts",
        "default": "./lib/legacy-compat/index.cjs"
      }
    }
  },
  "devDependencies": {
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "zod": "^4.3.5"
  }
}
