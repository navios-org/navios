{
  "name": "@navios/benchmarks",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "bench": "tsx runner.ts",
    "bench:cold-start": "tsx runner.ts --scenario=cold-start",
    "bench:light": "tsx runner.ts --scenario=light-load",
    "bench:moderate": "tsx runner.ts --scenario=moderate-load",
    "bench:heavy": "tsx runner.ts --scenario=heavy-load",
    "bench:sustained": "tsx runner.ts --scenario=sustained-load",
    "bench:all": "tsx runner.ts --all",
    "build:all": "npm run build --workspaces",
    "start:navios-fastify": "npm start -w apps/navios-fastify",
    "start:navios-bun": "npm start -w apps/navios-bun",
    "start:nestjs-express": "npm start -w apps/nestjs-express",
    "start:nestjs-fastify": "npm start -w apps/nestjs-fastify"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@types/autocannon": "^7.12.7",
    "@types/node": "^25.0.3",
    "autocannon": "^8.0.0",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "ora": "^8.1.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
